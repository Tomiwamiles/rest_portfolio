<%- contentFor('title') %><%= category.name %>

<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/customers/categories">Categories</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= category.name %></li>
        </ol>
      </nav>
      
      <div class="card mb-4 shadow-sm">
        <div class="card-body text-center py-5">
          <div class="category-icon mb-3">
            <i class="<%= category.icon || 'fas fa-tools' %> fa-4x text-primary"></i>
          </div>
          <h1 class="display-5"><%= category.name %></h1>
          <p class="lead"><%= category.description %></p>
        </div>
      </div>
      
      <h2 class="mb-4">Artisans in <%= category.name %></h2>
      
      <% if (typeof artisans !== 'undefined' && artisans.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% artisans.forEach(artisan => { %>
            <div class="col">
              <div class="card h-100 shadow-sm hover-card">
                <div class="position-relative">
                  <img src="<%= artisan.profileImage ? `/uploads/${artisan.profileImage}` : '/images/default-profile.jpg' %>" 
                       class="card-img-top" alt="<%= artisan.businessName %>" style="height: 200px; object-fit: cover;">
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%= artisan.businessName %></h5>
                  <p class="card-text text-truncate"><%= artisan.description %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <a href="/artisans/<%= artisan.slug %>" class="btn btn-sm btn-outline-primary">View Profile</a>
                    <small class="text-muted"><i class="fas fa-map-marker-alt me-1"></i><%= artisan.location %></small>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="alert alert-info">
          <p class="mb-0">No artisans found in this category. Check back later!</p>
        </div>
      <% } %>
    </div>
  </div>
</div> 