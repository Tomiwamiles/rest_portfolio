<section class="section artisan-detail-section">
  <div class="container">
    <div class="artisan-detail-container">
      <div class="artisan-detail-header">
        <div class="artisan-detail-image">
          <img src="<%= artisan.profileImage ? `/uploads/${artisan.profileImage}` : '/images/default.jpg' %>" alt="<%= artisan.name %>">
          <% if (artisan.isVerified) { %>
            <div class="artisan-badge verified">
              <i class="fas fa-check-circle"></i>
              <span class="badge-tooltip">Verified</span>
            </div>
          <% } %>
          <% if (artisan.featured) { %>
            <div class="artisan-badge featured">
              <i class="fas fa-star"></i>
              <span class="badge-tooltip">Featured</span>
            </div>
          <% } %>
        </div>
        
        <div class="artisan-detail-info">
          <div class="artisan-detail-primary">
            <h1 class="artisan-detail-name"><%= artisan.name %></h1>
            
            <div class="artisan-detail-meta">
              <div class="artisan-meta-item">
                <i class="fas fa-th-list"></i>
                <span><%= artisan.category ? artisan.category.name : 'Uncategorized' %></span>
              </div>
              
              <div class="artisan-meta-item">
                <i class="fas fa-map-marker-alt"></i>
                <span><%= artisan.city %>, <%= artisan.country %></span>
              </div>
              
              <% if (artisan.rating) { %>
                <div class="artisan-meta-item">
                  <div class="artisan-rating">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <i class="fas fa-star <%= i <= artisan.rating ? 'filled' : '' %>"></i>
                    <% } %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
          
          <div class="artisan-detail-contact">
            <a href="tel:<%= artisan.phone %>" class="btn btn-primary">
              <i class="fas fa-phone-alt"></i> Call
            </a>
            
            <% if (artisan.email) { %>
              <a href="mailto:<%= artisan.email %>" class="btn btn-outline">
                <i class="fas fa-envelope"></i> Email
              </a>
            <% } %>
            
            <% if (locals.user) { %>
              <button class="btn btn-secondary contact-btn" data-toggle="modal" data-target="#contactModal">
                <i class="fas fa-comment"></i> Message
              </button>
            <% } else { %>
              <a href="/login?redirect=/artisans/slug/<%= artisan.slug %>" class="btn btn-secondary">
                <i class="fas fa-comment"></i> Login to Message
              </a>
            <% } %>
          </div>
        </div>
      </div>
      
      <div class="artisan-detail-body">
        <div class="artisan-detail-tabs">
          <button class="tab-btn active" data-tab="description">Description</button>
          <button class="tab-btn" data-tab="location">Location</button>
          <% if (locals.user) { %>
            <button class="tab-btn" data-tab="contact">Contact</button>
          <% } %>
        </div>
        
        <div class="tab-content">
          <div class="tab-pane active" id="description-tab">
            <h3 class="tab-title">About <%= artisan.name %></h3>
            <div class="artisan-description">
              <p><%= artisan.description %></p>
            </div>
          </div>
          
          <div class="tab-pane" id="location-tab">
            <h3 class="tab-title">Location</h3>
            <div class="artisan-location">
              <div class="address-info">
                <p><i class="fas fa-map-marker-alt"></i> <%= artisan.address %></p>
                <p><i class="fas fa-city"></i> <%= artisan.city %><% if (artisan.state) { %>, <%= artisan.state %><% } %></p>
                <p><i class="fas fa-globe-americas"></i> <%= artisan.country %></p>
              </div>
              
              <div class="map-container">
                <!-- Map will be added in future implementation -->
                <div class="map-placeholder">
                  <i class="fas fa-map-marked-alt"></i>
                  <p>Map view will be available soon</p>
                </div>
              </div>
            </div>
          </div>
          
          <% if (locals.user) { %>
            <div class="tab-pane" id="contact-tab">
              <h3 class="tab-title">Contact <%= artisan.name %></h3>
              <form action="/customers/contact/<%= artisan._id %>" method="POST" class="contact-form needs-validation">
                <div class="form-group">
                  <label for="message" class="form-label">Message</label>
                  <textarea
                    id="message"
                    name="message"
                    class="form-control"
                    rows="5"
                    placeholder="Write your message here..."
                    required
                  ></textarea>
                </div>
                
                <div class="form-group">
                  <button type="submit" class="btn btn-primary">Send Message</button>
                </div>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Contact Modal -->
<% if (locals.user) { %>
  <div class="modal" id="contactModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Message <%= artisan.name %></h4>
          <button class="modal-close">&times;</button>
        </div>
        
        <div class="modal-body">
          <form action="/customers/contact/<%= artisan._id %>" method="POST" class="contact-form needs-validation">
            <div class="form-group">
              <label for="modal-message" class="form-label">Message</label>
              <textarea
                id="modal-message"
                name="message"
                class="form-control"
                rows="5"
                placeholder="Write your message here..."
                required
              ></textarea>
            </div>
            
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<% } %>

<style>
  .artisan-detail-section {
    padding-top: 40px;
  }
  
  .artisan-detail-container {
    background-color: white;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
  }
  
  .artisan-detail-header {
    display: flex;
    flex-wrap: wrap;
    border-bottom: 1px solid var(--border-color);
  }
  
  .artisan-detail-image {
    flex: 0 0 300px;
    height: 300px;
    position: relative;
    overflow: hidden;
  }
  
  .artisan-detail-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .artisan-badge {
    position: absolute;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 16px;
    transition: var(--transition);
  }
  
  .verified {
    top: 15px;
    right: 15px;
    background-color: var(--success-color);
  }
  
  .featured {
    top: 15px;
    left: 15px;
    background-color: var(--warning-color);
  }
  
  .badge-tooltip {
    position: absolute;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 5px 10px;
    border-radius: 3px;
    font-size: 12px;
    opacity: 0;
    visibility: hidden;
    transition: var(--transition);
    white-space: nowrap;
  }
  
  .verified .badge-tooltip {
    bottom: -30px;
    right: 0;
  }
  
  .featured .badge-tooltip {
    bottom: -30px;
    left: 0;
  }
  
  .artisan-badge:hover .badge-tooltip {
    opacity: 1;
    visibility: visible;
  }
  
  .artisan-detail-info {
    flex: 1;
    padding: 30px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .artisan-detail-name {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 10px;
    color: var(--bg-dark);
  }
  
  .artisan-detail-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 20px;
  }
  
  .artisan-meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text-light);
  }
  
  .artisan-rating {
    color: var(--warning-color);
  }
  
  .artisan-rating .filled {
    color: var(--warning-color);
  }
  
  .artisan-detail-contact {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }
  
  .artisan-detail-body {
    padding: 30px;
  }
  
  .artisan-detail-tabs {
    display: flex;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 20px;
  }
  
  .tab-btn {
    padding: 10px 20px;
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    cursor: pointer;
    font-family: inherit;
    font-size: inherit;
    font-weight: 500;
    color: var(--text-light);
    transition: var(--transition);
  }
  
  .tab-btn.active {
    color: var(--primary-color);
    border-bottom-color: var(--primary-color);
  }
  
  .tab-content {
    margin-top: 20px;
  }
  
  .tab-pane {
    display: none;
  }
  
  .tab-pane.active {
    display: block;
  }
  
  .tab-title {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 15px;
    color: var(--bg-dark);
  }
  
  .artisan-description p {
    line-height: 1.7;
  }
  
  .artisan-location {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
  }
  
  .address-info {
    flex: 1;
  }
  
  .address-info p {
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  .map-container {
    flex: 1;
    min-height: 200px;
  }
  
  .map-placeholder {
    height: 100%;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    border-radius: var(--radius);
    color: var(--text-light);
  }
  
  .map-placeholder i {
    font-size: 48px;
    margin-bottom: 15px;
    opacity: 0.5;
  }
  
  /* Modal styles */
  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }
  
  .modal.show {
    display: flex;
  }
  
  .modal-dialog {
    width: 100%;
    max-width: 500px;
    margin: 30px auto;
  }
  
  .modal-content {
    background-color: white;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
  }
  
  .modal-header {
    padding: 15px 20px;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .modal-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--bg-dark);
  }
  
  .modal-close {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: var(--text-light);
  }
  
  .modal-body {
    padding: 20px;
  }
  
  @media (max-width: 768px) {
    .artisan-detail-image {
      flex: 0 0 100%;
      height: 250px;
    }
    
    .artisan-detail-info {
      padding: 20px;
    }
    
    .artisan-detail-name {
      font-size: 24px;
    }
    
    .artisan-detail-body {
      padding: 20px;
    }
    
    .artisan-location {
      flex-direction: column;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Tab functionality
    const tabButtons = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Deactivate all tabs
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabPanes.forEach(pane => pane.classList.remove('active'));
        
        // Activate clicked tab
        button.classList.add('active');
        const tabId = `${button.dataset.tab}-tab`;
        document.getElementById(tabId).classList.add('active');
      });
    });
    
    // Modal functionality
    const contactBtn = document.querySelector('.contact-btn');
    const modal = document.getElementById('contactModal');
    const modalClose = document.querySelector('.modal-close');
    
    if (contactBtn && modal) {
      contactBtn.addEventListener('click', () => {
        modal.classList.add('show');
      });
      
      modalClose.addEventListener('click', () => {
        modal.classList.remove('show');
      });
      
      // Close when clicking outside of modal content
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.remove('show');
        }
      });
    }
  });
</script> 