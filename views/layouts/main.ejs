<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title + ' | ' : '' %>BizPro</title>
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
  <link rel="alternate icon" type="image/x-icon" href="/images/favicon.ico">
  <link rel="apple-touch-icon" href="/images/favicon.png">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <%- locals.blocks && typeof locals.blocks.styles !== 'undefined' ? locals.blocks.styles : '' %>
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="container">
      <div class="header-content">
        <div class="logo">
          <a href="/">
            <span class="logo-text">BizPro</span>
          </a>
        </div>
        <nav class="nav-menu">
          <ul class="nav-list">
            <li><a href="/" class="nav-link">Home</a></li>
            <li><a href="/artisans" class="nav-link">Artisans</a></li>
            <li><a href="/customers/categories" class="nav-link">Categories</a></li>
            <li><a href="/about" class="nav-link">About</a></li>
            <li><a href="/contact" class="nav-link">Contact</a></li>
          </ul>
        </nav>
        <div class="nav-actions">
          <% if (locals.user) { %>
            <div class="dropdown">
              <button class="dropdown-toggle">
                <i class="fas fa-user"></i> <%= user.name %> <i class="fas fa-caret-down"></i>
              </button>
              <div class="dropdown-menu">
                <a href="/profile">My Profile</a>
                <% if (user.role === 'admin') { %>
                  <a href="/admin/dashboard">Admin Dashboard</a>
                <% } %>
                <a href="/logout">Logout</a>
              </div>
            </div>
          <% } else { %>
            <a href="/login" class="btn btn-login">Login</a>
            <a href="/register" class="btn btn-primary">Register</a>
          <% } %>
          <button class="mobile-menu-toggle">
            <span></span>
            <span></span>
            <span></span>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Mobile Menu -->
  <div class="mobile-menu">
    <ul class="mobile-nav-list">
      <li><a href="/" class="mobile-nav-link">Home</a></li>
      <li><a href="/artisans" class="mobile-nav-link">Artisans</a></li>
      <li><a href="/customers/categories" class="mobile-nav-link">Categories</a></li>
      <li><a href="/about" class="mobile-nav-link">About</a></li>
      <li><a href="/contact" class="mobile-nav-link">Contact</a></li>
      <% if (locals.user) { %>
        <li><a href="/profile" class="mobile-nav-link">My Profile</a></li>
        <% if (user.role === 'admin') { %>
          <li><a href="/admin/dashboard" class="mobile-nav-link">Admin Dashboard</a></li>
        <% } %>
        <li><a href="/logout" class="mobile-nav-link">Logout</a></li>
      <% } else { %>
        <li><a href="/login" class="mobile-nav-link">Login</a></li>
        <li><a href="/register" class="mobile-nav-link">Register</a></li>
      <% } %>
    </ul>
  </div>

  <!-- Flash Messages -->
  <% if ((locals.success_msg && locals.success_msg.length > 0) || 
         (locals.error_msg && locals.error_msg.length > 0) || 
         (locals.error && locals.error.length > 0)) { %>
    <div class="flash-container">
      <div class="container">
        <% if (locals.success_msg && locals.success_msg.length > 0) { %>
          <div class="alert alert-success">
            <%= Array.isArray(success_msg) ? success_msg[0] : success_msg %>
            <button class="alert-close">&times;</button>
          </div>
        <% } %>
        <% if (locals.error_msg && locals.error_msg.length > 0) { %>
          <div class="alert alert-danger">
            <%= Array.isArray(error_msg) ? error_msg[0] : error_msg %>
            <button class="alert-close">&times;</button>
          </div>
        <% } %>
        <% if (locals.error && locals.error.length > 0) { %>
          <div class="alert alert-danger">
            <%= Array.isArray(error) ? error[0] : error %>
            <button class="alert-close">&times;</button>
          </div>
        <% } %>
      </div>
    </div>
  <% } %>

  <!-- Main Content -->
  <main class="main-content">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <!-- Wavy SVG -->
    <div class="footer-wave">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
        <path fill="#4a6cf7" fill-opacity="1" d="M0,128L48,149.3C96,171,192,213,288,218.7C384,224,480,192,576,170.7C672,149,768,139,864,154.7C960,171,1056,213,1152,224C1248,235,1344,213,1392,202.7L1440,192L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
      </svg>
    </div>
    
    <!-- Footer Content -->
    <div class="footer-content">
      <div class="container">
        <div class="footer-grid">
          <div class="footer-widget footer-widget-about">
            <h3 class="footer-widget-title">BizPro</h3>
            <p>Connecting artisans and service providers with customers, making it easier to find the perfect match for your needs.</p>
            <div class="social-links">
              <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
              <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
              <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
              <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
            </div>
          </div>
          
          <div class="footer-widget footer-widget-links">
            <h3 class="footer-widget-title">Quick Links</h3>
            <ul class="footer-links">
              <li><a href="/">Home</a></li>
              <li><a href="/artisans">Artisans</a></li>
              <li><a href="/customers/categories">Categories</a></li>
              <li><a href="/about">About Us</a></li>
              <li><a href="/contact">Contact Us</a></li>
            </ul>
          </div>
          
          <div class="footer-widget footer-widget-contact">
            <h3 class="footer-widget-title">Contact Us</h3>
            <ul class="contact-list">
              <li><i class="fas fa-map-marker-alt"></i> 123 Main Street, City, Country</li>
              <li><i class="fas fa-phone-alt"></i> +1 234 567 8900</li>
              <li><i class="fas fa-envelope"></i> info@bizpro.com</li>
            </ul>
          </div>
          
          <div class="footer-widget footer-widget-newsletter">
            <h3 class="footer-widget-title">Newsletter</h3>
            <p>Subscribe to our newsletter for updates.</p>
            <form class="newsletter-form">
              <input type="email" placeholder="Enter your email">
              <button type="submit" class="btn btn-primary">Subscribe</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="copyright">
      <div class="container">
        <p>&copy; 2023 BizPro. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <%- locals.blocks && typeof locals.blocks.scripts !== 'undefined' ? locals.blocks.scripts : '' %>
</body>
</html> 